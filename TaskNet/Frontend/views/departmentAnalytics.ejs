<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Department Analytics - TaskNet</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700;800&display=swap" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        body { font-family: 'Inter', sans-serif; background-color: #f4f7f9; margin: 0; padding: 0; }
        .container { max-width: 1400px; margin: 0 auto; padding: 2rem; }
        
        .header { margin-bottom: 2rem; }
        .back-link { text-decoration: none; color: #0f766e; font-weight: 600; margin-bottom: 1rem; display: block; }
        .title { font-size: 2rem; font-weight: 700; color: #0f172a; margin-bottom: 0.5rem; }
        
        .controls {
            background: white;
            border: 1px solid #e2e8f0;
            border-radius: 0.75rem;
            padding: 1rem;
            margin-bottom: 1.5rem;
            display: flex;
            gap: 1rem;
        }
        
        .date-filter {
            display: flex;
            gap: 0.5rem;
            align-items: center;
        }
        
        .date-filter label { font-weight: 600; color: #64748b; }
        
        .date-filter select {
            padding: 0.5rem 1rem;
            border: 1px solid #e2e8f0;
            border-radius: 0.375rem;
            cursor: pointer;
        }
        
        .chart-container {
            background: white;
            border: 1px solid #e2e8f0;
            border-radius: 0.75rem;
            padding: 1.5rem;
            margin-bottom: 1.5rem;
        }
        
        .chart-title { font-size: 1.1rem; font-weight: 700; color: #0f172a; margin-bottom: 1rem; }
        
        .chart-wrapper { position: relative; height: 300px; margin-bottom: 1rem; }
        
        .grid-2 { display: grid; grid-template-columns: repeat(2, 1fr); gap: 1.5rem; }
        
        .metric-box {
            background: white;
            border: 1px solid #e2e8f0;
            border-radius: 0.75rem;
            padding: 1.5rem;
        }
        
        .metric-title { font-size: 0.9rem; color: #64748b; font-weight: 600; }
        .metric-value { font-size: 2rem; font-weight: 700; color: #0f172a; margin-top: 0.5rem; }
        
        .professor-table {
            background: white;
            border: 1px solid #e2e8f0;
            border-radius: 0.75rem;
            padding: 1.5rem;
        }
        
        table {
            width: 100%;
            border-collapse: collapse;
        }
        
        th {
            padding: 1rem;
            text-align: left;
            font-weight: 600;
            color: #64748b;
            font-size: 0.85rem;
            border-bottom: 2px solid #e2e8f0;
        }
        
        td {
            padding: 1rem;
            border-bottom: 1px solid #e2e8f0;
        }
        
        @media (max-width: 768px) {
            .controls { flex-direction: column; }
            .grid-2 { grid-template-columns: 1fr; }
            .chart-wrapper { height: 250px; }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <a href="/hod/dashboard" class="back-link">‚Üê Back to Dashboard</a>
            <h1 class="title">Department Analytics</h1>
        </div>

        <div class="controls">
            <div class="date-filter">
                <label>Time Period:</label>
                <form method="GET" style="display: flex;">
                    <select name="dateRange" onchange="this.form.submit();">
                        <option value="week" <%= dateRange === 'week' ? 'selected' : '' %>>Last 7 Days</option>
                        <option value="month" <%= dateRange === 'month' ? 'selected' : '' %>>Last 30 Days</option>
                        <option value="quarter" <%= dateRange === 'quarter' ? 'selected' : '' %>>Last 90 Days</option>
                        <option value="year" <%= dateRange === 'year' ? 'selected' : '' %>>Last Year</option>
                    </select>
                </form>
            </div>
        </div>

        <div class="grid-2">
            <div class="metric-box">
                <div class="metric-title">Total Submissions</div>
                <div class="metric-value" id="totalSubmissions">-</div>
            </div>
            <div class="metric-box">
                <div class="metric-title">Average Review Time</div>
                <div class="metric-value" id="avgReviewTime">-</div>
            </div>
        </div>

        <div class="chart-container">
            <div class="chart-title">Submission Timeline</div>
            <div class="chart-wrapper">
                <canvas id="timelineChart"></canvas>
            </div>
        </div>

        <div class="grid-2">
            <div class="chart-container">
                <div class="chart-title">Status Distribution</div>
                <div class="chart-wrapper">
                    <canvas id="statusChart"></canvas>
                </div>
            </div>
            <div class="chart-container">
                <div class="chart-title">Category Distribution</div>
                <div class="chart-wrapper">
                    <canvas id="categoryChart"></canvas>
                </div>
            </div>
        </div>

        <div class="chart-container">
            <div class="chart-title">Professor Performance</div>
            <div style="overflow-x: auto;">
                <table>
                    <thead>
                        <tr>
                            <th>Professor Name</th>
                            <th>Total Reviews</th>
                            <th>Approved</th>
                            <th>Rejected</th>
                            <th>Approval Rate</th>
                        </tr>
                    </thead>
                    <tbody id="professorTableBody">
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <script>
        const timelineData = JSON.parse('<%- timelineData %>');
        const statusDistribution = JSON.parse('<%- statusDistribution %>');
        const categoryDistribution = JSON.parse('<%- categoryDistribution %>');
        const professorPerformance = JSON.parse('<%- professorPerformance %>');

        if (timelineData.length > 0) {
            const timelineCtx = document.getElementById('timelineChart').getContext('2d');
            new Chart(timelineCtx, {
                type: 'line',
                data: {
                    labels: timelineData.map(d => d._id),
                    datasets: [{
                        label: 'Submissions',
                        data: timelineData.map(d => d.count),
                        borderColor: '#0f766e',
                        backgroundColor: 'rgba(15, 118, 110, 0.1)',
                        tension: 0.4,
                        fill: true
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: { legend: { display: true } }
                }
            });
        }

      
        if (statusDistribution.length > 0) {
            const statusCtx = document.getElementById('statusChart').getContext('2d');
            const colors = ['#3b82f6', '#22c55e', '#ef4444', '#8b5cf6'];
            new Chart(statusCtx, {
                type: 'doughnut',
                data: {
                    labels: statusDistribution.map(d => d._id),
                    datasets: [{
                        data: statusDistribution.map(d => d.count),
                        backgroundColor: colors,
                        borderColor: '#fff',
                        borderWidth: 2
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: { legend: { position: 'bottom' } }
                }
            });
        }

        
        if (categoryDistribution.length > 0) {
            const categoryCtx = document.getElementById('categoryChart').getContext('2d');
            new Chart(categoryCtx, {
                type: 'bar',
                data: {
                    labels: categoryDistribution.map(d => d._id),
                    datasets: [{
                        label: 'Count',
                        data: categoryDistribution.map(d => d.count),
                        backgroundColor: ['#0f766e', '#0891b2', '#7c3aed']
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    indexAxis: 'y',
                    plugins: { legend: { display: false } }
                }
            });
        }

        
        const tbody = document.getElementById('professorTableBody');
        professorPerformance.forEach(prof => {
            const approvalRate = prof.total > 0 ? ((prof.approved / prof.total) * 100).toFixed(2) : 0;
            const row = document.createElement('tr');
            row.innerHTML = `
                <td>${prof.professorName}</td>
                <td>${prof.total}</td>
                <td>${prof.approved}</td>
                <td>${prof.rejected}</td>
                <td>${approvalRate}%</td>
            `;
            tbody.appendChild(row);
        });

        const totalSubs = timelineData.reduce((sum, d) => sum + d.count, 0);
        document.getElementById('totalSubmissions').textContent = totalSubs;
    </script>
</body>
</html>
