<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Assignment Review - TaskNet</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700;800&display=swap" rel="stylesheet">
    <style>
        body { font-family: 'Inter', sans-serif; background-color: #f4f7f9; margin: 0; padding: 0; }
        .container { max-width: 1000px; margin: 0 auto; padding: 2rem; }
        
        .header { margin-bottom: 2rem; }
        .back-link { text-decoration: none; color: #0f766e; font-weight: 600; margin-bottom: 1rem; display: block; }
        .title { font-size: 2rem; font-weight: 700; color: #0f172a; margin-bottom: 0.5rem; }
        
        .info-card {
            background: white;
            border: 1px solid #e2e8f0;
            border-radius: 0.75rem;
            padding: 1.5rem;
            margin-bottom: 1.5rem;
        }
        
        .card-title { font-size: 1.1rem; font-weight: 700; color: #0f172a; margin-bottom: 1rem; }
        
        .info-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 1rem;
        }
        
        .info-label { font-size: 0.85rem; color: #64748b; font-weight: 600; }
        .info-value { font-size: 1rem; font-weight: 600; color: #0f172a; margin-top: 0.5rem; }
        
        .status-badge {
            display: inline-block;
            padding: 0.3rem 0.75rem;
            border-radius: 9999px;
            font-size: 0.75rem;
            font-weight: 600;
        }
        
        .status-submitted { background-color: #dbeafe; color: #0369a1; }
        .status-approved { background-color: #fef3c7; color: #92400e; }
        .status-rejected { background-color: #fee2e2; color: #991b1b; }
        .status-forwarded { background-color: #ddd6fe; color: #4c1d95; }
        
        .file-section {
            background: white;
            border: 1px solid #e2e8f0;
            border-radius: 0.75rem;
            padding: 1.5rem;
            margin-bottom: 1.5rem;
            text-align: center;
        }
        
        .file-link {
            display: inline-block;
            margin: 1rem 0;
            padding: 0.75rem 1.5rem;
            background-color: #0f766e;
            color: white;
            text-decoration: none;
            border-radius: 0.375rem;
            font-weight: 600;
        }
        
        .file-link:hover { background-color: #115e59; }
        
        .history-section {
            background: white;
            border: 1px solid #e2e8f0;
            border-radius: 0.75rem;
            padding: 1.5rem;
            margin-bottom: 1.5rem;
        }
        
        .history-item {
            padding: 1rem;
            border-left: 3px solid #0f766e;
            background-color: #f8fafc;
            margin-bottom: 0.75rem;
            border-radius: 0.375rem;
        }
        
        .history-action { font-weight: 700; color: #0f172a; }
        .history-by { font-size: 0.85rem; color: #64748b; margin: 0.25rem 0; }
        .history-date { font-size: 0.8rem; color: #94a3b8; margin-top: 0.5rem; }
        .history-remark { font-size: 0.9rem; color: #475569; margin-top: 0.5rem; font-style: italic; }
        
        .override-section {
            background: white;
            border: 2px dashed #ef4444;
            border-radius: 0.75rem;
            padding: 1.5rem;
            margin-bottom: 1.5rem;
        }
        
        .override-title { font-size: 1.1rem; font-weight: 700; color: #991b1b; margin-bottom: 1rem; }
        
        .override-buttons {
            display: flex;
            gap: 1rem;
            margin-top: 1rem;
        }
        
        .btn {
            padding: 0.75rem 1.5rem;
            border: none;
            border-radius: 0.375rem;
            font-weight: 600;
            cursor: pointer;
            text-decoration: none;
        }
        
        .btn-approve { background-color: #22c55e; color: white; }
        .btn-approve:hover { background-color: #16a34a; }
        
        .btn-reject { background-color: #ef4444; color: white; }
        .btn-reject:hover { background-color: #dc2626; }
        
        .form-group {
            margin-bottom: 1rem;
        }
        
        .form-label { font-weight: 600; color: #0f172a; margin-bottom: 0.5rem; display: block; }
        
        .form-input, .form-textarea {
            width: 100%;
            padding: 0.75rem;
            border: 1px solid #e2e8f0;
            border-radius: 0.375rem;
            font-family: 'Inter', sans-serif;
            box-sizing: border-box;
        }
        
        .form-textarea {
            min-height: 100px;
            resize: vertical;
        }
        
        .modal {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-color: rgba(0, 0, 0, 0.5);
            z-index: 1000;
            align-items: center;
            justify-content: center;
        }
        
        .modal.active { display: flex; }
        
        .modal-content {
            background: white;
            padding: 2rem;
            border-radius: 0.75rem;
            max-width: 500px;
            width: 90%;
            box-shadow: 0 20px 25px rgba(0, 0, 0, 0.2);
        }
        
        .modal-title { font-size: 1.25rem; font-weight: 700; color: #0f172a; margin-bottom: 1rem; }
        
        .modal-close {
            position: absolute;
            top: 1rem;
            right: 1rem;
            background: none;
            border: none;
            font-size: 1.5rem;
            cursor: pointer;
            color: #64748b;
        }
        
        @media (max-width: 768px) {
            .override-buttons { flex-direction: column; }
            .info-grid { grid-template-columns: 1fr; }
            .btn { width: 100%; text-align: center; }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <a href="/hod/assignments" class="back-link">← Back to Assignments</a>
            <h1 class="title">Assignment Review</h1>
        </div>

        <div class="info-card">
            <div class="card-title">Assignment Details</div>
            <div class="info-grid">
                <div class="info-item">
                    <div class="info-label">Student</div>
                    <div class="info-value"><%= assignment.studentId.name %></div>
                </div>
                <div class="info-item">
                    <div class="info-label">Email</div>
                    <div class="info-value"><%= assignment.studentId.email %></div>
                </div>
                <div class="info-item">
                    <div class="info-label">Title</div>
                    <div class="info-value"><%= assignment.title %></div>
                </div>
                <div class="info-item">
                    <div class="info-label">Category</div>
                    <div class="info-value"><%= assignment.category %></div>
                </div>
                <div class="info-item">
                    <div class="info-label">Course Code</div>
                    <div class="info-value"><%= assignment.courseCode || 'N/A' %></div>
                </div>
                <div class="info-item">
                    <div class="info-label">Current Status</div>
                    <div class="info-value">
                        <span class="status-badge status-<%= assignment.status.toLowerCase() %>">
                            <%= assignment.status %>
                        </span>
                    </div>
                </div>
                <div class="info-item">
                    <div class="info-label">Assigned Reviewer</div>
                    <div class="info-value"><%= assignment.reviewerId ? assignment.reviewerId.name : 'Not assigned' %></div>
                </div>
                <div class="info-item">
                    <div class="info-label">Submitted Date</div>
                    <div class="info-value"><%= new Date(assignment.submissionDate).toLocaleString() %></div>
                </div>
            </div>
        </div>

        <% if (assignment.description) { %>
            <div class="info-card">
                <div class="card-title">Description</div>
                <p style="color: #475569; line-height: 1.6;"><%= assignment.description %></p>
            </div>
        <% } %>

        <% if (assignment.fileUrl) { %>
            <div class="file-section">
                <div class="card-title">Assignment File</div>
                <p style="color: #64748b; margin-bottom: 0;">
                    Original File: <strong><%= assignment.originalFileName || 'Download' %></strong>
                </p>
                <a href="<%= assignment.fileUrl %>" target="_blank" class="file-link">Download File</a>
            </div>
        <% } %>

        <% if (assignment.history && assignment.history.length > 0) { %>
            <div class="history-section">
                <div class="card-title">Review History</div>
                <% assignment.history.forEach(entry => { %>
                    <div class="history-item">
                        <div class="history-action"><%= entry.action %></div>
                        <div class="history-by">By: <%= entry.by %></div>
                        <% if (entry.remark) { %>
                            <div class="history-remark">"<%= entry.remark %>"</div>
                        <% } %>
                        <div class="history-date"><%= new Date(entry.timestamp).toLocaleString() %></div>
                    </div>
                <% }) %>
            </div>
        <% } %>

        <div class="override-section">
            <div class="override-title">HOD Override Actions</div>
            <p style="color: #64748b; margin-bottom: 1rem;">As HOD, you can override the professor's decision:</p>
            <div class="override-buttons">
                <button class="btn btn-approve" onclick="openModal('approveModal')">Override & Approve</button>
                <button class="btn btn-reject" onclick="openModal('rejectModal')">Override & Reject</button>
            </div>
        </div>
    </div>

    <div class="modal" id="approveModal">
        <div class="modal-content">
            <button class="modal-close" onclick="closeModal('approveModal')">✕</button>
            <h2 class="modal-title">Override & Approve</h2>
            <form onsubmit="handleOverrideApprove(event)">
                <div class="form-group">
                    <label class="form-label">Remarks (Optional)</label>
                    <textarea class="form-textarea" name="remarks" placeholder="Enter any remarks..." id="approveRemarks"></textarea>
                </div>
                <button type="submit" class="btn btn-approve" style="width: 100%; text-align: center; margin-top: 1rem;">Confirm Approval</button>
            </form>
        </div>
    </div>

    <div class="modal" id="rejectModal">
        <div class="modal-content">
            <button class="modal-close" onclick="closeModal('rejectModal')">✕</button>
            <h2 class="modal-title">Override & Reject</h2>
            <form onsubmit="handleOverrideReject(event)">
                <div class="form-group">
                    <label class="form-label">Rejection Reason (Required)</label>
                    <textarea class="form-textarea" name="remarks" placeholder="Explain the reason for rejection..." id="rejectRemarks" required></textarea>
                </div>
                <button type="submit" class="btn btn-reject" style="width: 100%; text-align: center; margin-top: 1rem;">Confirm Rejection</button>
            </form>
        </div>
    </div>

    <script>
        function openModal(modalId) {
            document.getElementById(modalId).classList.add('active');
        }

        function closeModal(modalId) {
            document.getElementById(modalId).classList.remove('active');
        }

        async function handleOverrideApprove(event) {
            event.preventDefault();
            const remarks = document.getElementById('approveRemarks').value;
            
            try {
                const response = await fetch('/hod/assignments/<%= assignment._id %>/override-approve', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ assignmentId: '<%= assignment._id %>', remarks })
                });

                const data = await response.json();
                if (data.success) {
                    alert('Assignment approved successfully!');
                    window.location.reload();
                } else {
                    alert('Error: ' + data.message);
                }
            } catch (error) {
                alert('An error occurred: ' + error.message);
            }
        }

        async function handleOverrideReject(event) {
            event.preventDefault();
            const remarks = document.getElementById('rejectRemarks').value;
            
            if (remarks.trim().length < 10) {
                alert('Rejection reason must be at least 10 characters');
                return;
            }

            try {
                const response = await fetch('/hod/assignments/<%= assignment._id %>/override-reject', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ assignmentId: '<%= assignment._id %>', remarks })
                });

                const data = await response.json();
                if (data.success) {
                    alert('Assignment rejected successfully!');
                    window.location.reload();
                } else {
                    alert('Error: ' + data.message);
                }
            } catch (error) {
                alert('An error occurred: ' + error.message);
            }
        }
        window.onclick = function(event) {
            const approveModal = document.getElementById('approveModal');
            const rejectModal = document.getElementById('rejectModal');
            
            if (event.target === approveModal) {
                closeModal('approveModal');
            }
            if (event.target === rejectModal) {
                closeModal('rejectModal');
            }
        }
    </script>
</body>
</html>
