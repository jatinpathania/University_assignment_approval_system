<body>

    <header class="top-header">
        <button class="menu-toggle" id="menuToggle">â˜°</button>
        <h1 class="top-title">Admin Dashboard</h1>
        <img src="/admin.png" alt="Profile" class="header-profile">
    </header>

    <div class="page-container">
        <div class="sidebar">
            <div>
                <h2 class="nav-title">Navigation</h2>

                <nav class="flex flex-col">
                    <a href="/admin/dashboard" class="nav-link">
                        Dashboard Overview
                    </a>
                    <a href="/admin/departments" class="nav-link">
                        Departments
                    </a>
                    <a href="/admin/users" class="nav-link active">
                        Users
                    </a>
                    <a href="/admin/add-user" class="nav-link">
                        Add User
                    </a>
                </nav>
            </div>
            
            <div class="mt-8">
                <form action="/logout" method="POST">
                    <button type="submit" class="logout-button">
                        <div class="sign">
                            <svg viewBox="0 0 512 512">
                                <path
                                    d="M377.9 105.9L500.7 228.7c7.2 7.2 11.3 17.1 11.3 27.3s-4.1 20.1-11.3 27.3L377.9 406.1c-6.4 6.4-15 9.9-24 9.9c-18.7 0-33.9-15.2-33.9-33.9l0-62.1-128 0c-17.7 0-32-14.3-32-32l0-64c0-17.7 14.3-32 32-32l128 0 0-62.1c0-18.7 15.2-33.9 33.9-33.9c9 0 17.6 3.6 24 9.9zM160 96L96 96c-17.7 0-32 14.3-32 32l0 256c0 17.7 14.3 32 32 32l64 0c17.7 0 32 14.3 32 32s-14.3 32-32 32l-64 0c-53 0-96-43-96-96L0 128C0 75 43 32 96 32l64 0c17.7 0 32 14.3 32 32s-14.3 32-32 32z"
                                ></path>
                            </svg>
                        </div>
                        <div class="text">Logout</div>
                    </button>
                </form>
            </div>
        </div>

        <div class="main-content">
            <header class="header">
                <h1 class="content-title">All Users</h1>
                <div class="welcome-text">Welcome, <span class="welcome-user"><%= user.name %> (<%= user.role %>)</span></div>
            </header>
            
            <% if (error) { %>
                <div class="general-error global-message-error" style="margin-bottom: 1.5rem;">
                    <%= error %>
                </div>
            <% } %>

            <div id="globalMessageContainer" class="global-message-container"></div>


            <form id="filterForm" method="GET" action="/admin/users">
                <div class="controls-container">
                    <div class="form-control-group" style="width: 300px;">
                        <label for="search">Search by name or email</label>
                        <input type="text" id="search" name="search" placeholder="Search by name or email" value="<%= searchQuery %>">
                    </div>
                    
                    <div class="form-control-group" style="width: 200px;">
                        <label for="roleFilter">Role</label>
                        <select id="roleFilter" name="role">
                            <option value="All" <%= filterRole === 'All' ? 'selected' : '' %>>All Roles</option>
                            <% roles.forEach(r => { %>
                                <option value="<%= r %>" <%= filterRole === r ? 'selected' : '' %>>
                                    <%= r.toUpperCase() %>
                                </option>
                            <% }) %>
                        </select>
                    </div>

                    <div class="form-control-group" style="width: 250px;">
                        <label for="departmentFilter">Department</label>
                        <select id="departmentFilter" name="department">
                            <option value="All" <%= filterDepartment === 'All' ? 'selected' : '' %>>All Departments</option>
                            <% allDepartments.forEach(dept => { %>
                                <option value="<%= dept._id %>" <%= filterDepartment === dept._id.toString() ? 'selected' : '' %>>
                                    <%= dept.name %>
                                </option>
                            <% }) %>
                        </select>
                    </div>
                </div>
                <input type="submit" style="display: none;">
            </form>

            <% if (users.length > 0) { %>
                <div class="user-table-wrapper">
                    <table class="user-table" id="userTable">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Role</th>
                                <th>Department</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody id="userTableBody">
                            <% users.forEach(user => { %>
                                <tr data-user-id="<%= user._id %>">
                                    <td data-field="name"><%= user.name %></td>
                                    <td data-field="email"><%= user.email %></td>
                                    <td data-field="role"><%= user.role.toUpperCase() %></td>
                                    <td data-field="departmentName"><%= user.departmentName %></td>
                                    <td data-field="status">
                                        <span class="status-active"><%= user.status %></span>
                                    </td>
                                    <td>
                                        <button data-user-id="<%= user._id %>" class="action-button edit-button open-edit-modal" type="button">Edit</button>
                                        <button data-user-id="<%= user._id %>" data-user-name="<%= user.name %>" class="action-button delete-button open-delete-modal" type="button">Delete</button>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
                
                <div class="pagination">
                    <a href="?page=<%= currentPage - 1 %>&search=<%= searchQuery %>&role=<%= filterRole %>&department=<%= filterDepartment %>" 
                       class="pagination-button <%= currentPage <= 1 ? 'disabled' : '' %>">
                        Previous
                    </a>
                    <% for(let i = 1; i <= totalPages; i++) { %>
                        <a href="?page=<%= i %>&search=<%= searchQuery %>&role=<%= filterRole %>&department=<%= filterDepartment %>" 
                           class="pagination-button <%= currentPage === i ? 'active' : '' %>">
                            <%= i %>
                        </a>
                    <% } %>
                    <a href="?page=<%= currentPage + 1 %>&search=<%= searchQuery %>&role=<%= filterRole %>&department=<%= filterDepartment %>" 
                       class="pagination-button <%= currentPage >= totalPages ? 'disabled' : '' %>">
                        Next
                    </a>
                </div>

            <% } else { %>
                <div class="no-data">
                    No users found matching the current criteria.
                </div>
            <% } %>
        </div>
    </div>
    
    <footer class="footer">
        &copy; 2025 TaskNet - Admin Dashboard. All rights reserved.
    </footer>
    
    <div id="editUserModal" class="modal">
        <div id="modalUserContent" class="modal-content">
            <div style="text-align: center; padding: 2rem;">Loading user details...</div>
        </div>
    </div>

    <script>
    document.addEventListener('DOMContentLoaded', () => {
        // Mobile sidebar toggle
        const menuToggle = document.getElementById('menuToggle');
        const sidebar = document.querySelector('.sidebar');

        menuToggle.addEventListener('click', () => {
            sidebar.classList.toggle('open');
        });

        document.querySelectorAll('.nav-link').forEach(link => {
            link.addEventListener('click', () => {
                sidebar.classList.remove('open');
            });
        });

        document.querySelector('.main-content').addEventListener('click', () => {
            sidebar.classList.remove('open');
        });

        const filterForm = document.getElementById('filterForm');
        const searchInput = document.getElementById('search');
        const roleFilter = document.getElementById('roleFilter');
        const departmentFilter = document.getElementById('departmentFilter');
        const mainContent = document.querySelector('.main-content');
        const userTableBody = document.getElementById('userTableBody');
        const globalMessageContainer = document.getElementById('globalMessageContainer');
        
        const editUserModal = document.getElementById('editUserModal');
        const modalUserContent = document.getElementById('modalUserContent');


        const displayGlobalMessage = (type, message) => {
            
            globalMessageContainer.innerHTML = `<div class="global-message-${type}">${message}</div>`;
            setTimeout(() => {
                globalMessageContainer.innerHTML = '';
            }, 5000);
        };

        const closeEditModal = () => {
            editUserModal.style.display = 'none';
            modalUserContent.innerHTML = '<div style="text-align: center; padding: 2rem;">Loading user details...</div>';
        };

        const attachModalCloseListener = () => {
            const closeBtn = document.getElementById('closeEditModalBtn');
            if (closeBtn) {
                closeBtn.addEventListener('click', closeEditModal);
            }
        };

        const updateTableRow = (userData) => {
            const row = document.querySelector(`tr[data-user-id="${userData._id}"]`);
            if (row) {
                row.querySelector('[data-field="name"]').textContent = userData.name;
                row.querySelector('[data-field="email"]').textContent = userData.email;
                row.querySelector('[data-field="role"]').textContent = userData.role.toUpperCase();
                row.querySelector('[data-field="departmentName"]').textContent = userData.departmentName;
            } else {
                window.location.reload();
            }
        };
        
        const handleEditFormSubmission = async (e) => {
            e.preventDefault();
            const form = e.target;
            const formData = new FormData(form);
            const submitButton = form.querySelector('.submit-button');
            
            submitButton.textContent = 'Updating...';
            submitButton.disabled = true;

            const data = {};
            formData.forEach((value, key) => { data[key] = value; });
            
            try {
                const response = await fetch(form.action, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    credentials: 'same-origin',
                    body: JSON.stringify(data)
                });

                const result = await response.json();
                
                if (result.success) {
                    displayGlobalMessage('success', result.message);
                    closeEditModal();
                    updateTableRow(result.user);
                } else {
                    const errorMessage = result.error || result.errors || 'Update failed.';
                    displayGlobalMessage('error',
                        typeof errorMessage === 'object'? JSON.stringify(errorMessage): errorMessage
                    );
                }

            } catch (error) {
                console.error('Update failed:', error);
                displayGlobalMessage('error', 'Failed to update user due to a connection error.');
                closeEditModal();
            } finally {
                submitButton.textContent = 'Update User';
                submitButton.disabled = false;
            }
        };

        const handleDeleteUser = async (userId, userName) => {
            try {
                const response = await fetch(`/admin/users/${userId}/delete`, {
                    method: 'POST',
                    credentials: 'same-origin'
                });

                const result = await response.json();

                if (result.success) {
                    displayGlobalMessage('success', result.message);
                    const row = document.querySelector(`tr[data-user-id="${userId}"]`);
                    if (row) {
                        row.remove();
                    }
                } else {
                    displayGlobalMessage('error', result.message);
                }
            } catch (error) {
                console.error('Error deleting user:', error);
                displayGlobalMessage('error', 'Failed to delete user due to a connection error.');
            }
        };

        const showDeleteConfirmDialog = (userId, userName) => {
            const deleteConfirmModal = document.createElement('div');
            deleteConfirmModal.className = 'modal';
            deleteConfirmModal.style.display = 'flex';
            deleteConfirmModal.innerHTML = `
                <div class="modal-content" style="max-width: 400px;">
                    <h2 style="font-size: 1.25rem; font-weight: 700; color: #1f2937; margin-bottom: 1rem;">Confirm Delete</h2>
                    <p style="color: #6b7280; margin-bottom: 1.5rem;">Are you sure you want to delete <strong>${userName}</strong>? This action cannot be undone.</p>
                    <div style="display: flex; justify-content: flex-end; gap: 1rem;">
                        <button id="cancelDeleteBtn" style="padding: 0.6rem 1.2rem; background-color: #e5e7eb; color: #374151; border: none; border-radius: 0.5rem; font-weight: 600; cursor: pointer;">
                            Cancel
                        </button>
                        <button id="confirmDeleteBtn" style="padding: 0.6rem 1.2rem; background-color: #ef4444; color: white; border: none; border-radius: 0.5rem; font-weight: 600; cursor: pointer;">
                            Delete
                        </button>
                    </div>
                </div>
            `;
            
            document.body.appendChild(deleteConfirmModal);
            
            document.getElementById('cancelDeleteBtn').addEventListener('click', () => {
                deleteConfirmModal.remove();
            });
            
            document.getElementById('confirmDeleteBtn').addEventListener('click', async () => {
                await handleDeleteUser(userId, userName);
                deleteConfirmModal.remove();
            });
            
            deleteConfirmModal.addEventListener('click', (e) => {
                if (e.target === deleteConfirmModal) {
                    deleteConfirmModal.remove();
                }
            });
        };

        const submitForm = () => {
            const currentUrl = new URL(window.location.href);
            currentUrl.searchParams.set('page', '1');
            currentUrl.searchParams.set('search', searchInput.value);
            currentUrl.searchParams.set('role', roleFilter.value);
            currentUrl.searchParams.set('department', departmentFilter.value);
            window.location.href = currentUrl.toString();
        };
        roleFilter.addEventListener('change', submitForm);
        departmentFilter.addEventListener('change', submitForm);
        searchInput.addEventListener('keypress', (e) => {
            if (e.key === 'Enter') {
                e.preventDefault();
                submitForm();
            }
        });
        searchInput.addEventListener('blur', submitForm);
        
        document.querySelectorAll('.pagination-button.disabled').forEach(button => {
            button.addEventListener('click', (e) => { e.preventDefault(); });
        });


        mainContent.addEventListener('click', async (e) => {
            if (e.target.classList.contains('open-edit-modal')) {
                const userId = e.target.dataset.userId;
                editUserModal.style.display = 'flex';
                
                try {
                    const response = await fetch(`/admin/users/${userId}/edit`, {
                        credentials: 'same-origin'
                    });
                    const html = await response.text();
                    
                    modalUserContent.innerHTML = html;
                    
                    const form = document.getElementById('editUserForm');
                    if (form) {
                        form.addEventListener('submit', handleEditFormSubmission);
                    }
                    
                    attachModalCloseListener();
                    
                } catch (error) {
                    console.error('Error fetching edit form:', error);
                    modalUserContent.innerHTML = '<div class="global-message-error">Failed to load edit form due to a network error.</div>';
                }
            }

            if (e.target.classList.contains('open-delete-modal')) {
                const userId = e.target.dataset.userId;
                const userName = e.target.dataset.userName;
                showDeleteConfirmDialog(userId, userName);
            }
        });
        
        editUserModal.addEventListener('click', (e) => {
            if (e.target === editUserModal) { 
                closeEditModal(); 
            }
        });
    });
</script>
</body>
</html>