<form id="editDepartmentForm" action="/admin/departments/<%= dept._id %>/update" method="POST">
    <h2 class="form-title" style="font-size: 1.5rem; font-weight: 700; color: #1f2937; margin-bottom: 1.5rem;">
        Edit Department: <%= dept.name %>
    </h2>

    <% if (successMessage) { %>
        <div class="success-message" style="background-color: #d1fae5; color: #065f46; padding: 0.75rem; border-radius: 0.5rem; margin-bottom: 1rem; font-weight: 600;">
            <%= successMessage %>
        </div>
    <% } %>

    <% if (errors.general) { %>
        <div class="general-error" style="background-color: #fee2e2; color: #991b1b; padding: 0.75rem; border-radius: 0.5rem; margin-bottom: 1rem; font-weight: 600;">
            <%= errors.general %>
        </div>
    <% } %>

    <div class="form-group" style="margin-bottom: 1rem;">
        <label for="name" style="display: block; font-weight: 600; color: #374151; margin-bottom: 0.25rem;">Department Name*</label>
        <input type="text" id="name" name="name" value="<%= dept.name %>" required style="width: 100%; padding: 0.75rem; border: 1px solid #d1d5db; border-radius: 0.5rem; box-sizing: border-box;">
        <% if (errors.name) { %>
            <div class="error-text" style="color: #dc2626; font-size: 0.875rem; margin-top: 0.25rem;"><%= errors.name %></div>
        <% } %>
    </div>
    
    <div class="form-group" style="margin-bottom: 1rem;">
        <label for="programType" style="display: block; font-weight: 600; color: #374151; margin-bottom: 0.25rem;">Program Type*</label>
        <select id="programType" name="programType" required style="width: 100%; padding: 0.75rem; border: 1px solid #d1d5db; border-radius: 0.5rem; box-sizing: border-box;">
            <% programTypes.forEach(type => { %>
                <option value="<%= type %>" <%= dept.programType === type ? 'selected' : '' %>><%= type %></option>
            <% }) %>
        </select>
        <% if (errors.programType) { %>
            <div class="error-text" style="color: #dc2626; font-size: 0.875rem; margin-top: 0.25rem;"><%= errors.programType %></div>
        <% } %>
    </div>
    
    <div class="form-group" style="margin-bottom: 1.5rem;">
        <label for="address" style="display: block; font-weight: 600; color: #374151; margin-bottom: 0.25rem;">Address*</label>
        <textarea id="address" name="address" rows="3" required style="width: 100%; padding: 0.75rem; border: 1px solid #d1d5db; border-radius: 0.5rem; box-sizing: border-box;"><%= dept.address %></textarea>
        <% if (errors.address) { %>
            <div class="error-text" style="color: #dc2626; font-size: 0.875rem; margin-top: 0.25rem;"><%= errors.address %></div>
        <% } %>
    </div>
    
    <div style="display: flex; justify-content: flex-end; gap: 0.75rem;">
        <button type="button" class="modal-close-btn" style="padding: 0.6rem 1.2rem; background-color: #e5e7eb; color: #374151; border: none; border-radius: 0.5rem; font-weight: 600; cursor: pointer;">
            Cancel
        </button>
        <button type="submit" class="submit-button" style="padding: 0.6rem 1.2rem; background-color: #4f46e5; color: white; border: none; border-radius: 0.5rem; font-weight: 600; cursor: pointer; transition: background-color 0.2s;">
            Save Changes
        </button>
    </div>
</form>